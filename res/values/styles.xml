<resources>

    <style name="DarkTheme" parent="android:Theme.Holo">
         <item name="attr/font">@android:color/white</item>
         <item name="attr/background">@android:color/black</item>
    </style>
    <style name="LightTheme" parent="android:Theme.Holo.Light">
         <item name="attr/font">@android:color/black</item>
         <item name="attr/background">@android:color/white</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="LightTheme">
        
    </style>
    
    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>

</resources>
