<resources>
    <style name="DarkTheme" parent="android:Theme.Holo">
         <item name="attr/wifi">@drawable/wifi_d</item>
         <item name="attr/brightness">@drawable/brightness_d</item>
         <item name="attr/volume">@drawable/volume_d</item>
         <item name="attr/charge">@drawable/charge_d</item>
         <item name="attr/misc">@drawable/misc_d</item>
         <item name="attr/performance">@drawable/performance_d</item>
         <item name="attr/app">@drawable/app_d</item>
    </style>
    <style name="LightTheme" parent="android:Theme.Holo.Light">
         <item name="attr/wifi">@drawable/wifi_l</item>
         <item name="attr/brightness">@drawable/brightness_l</item>
         <item name="attr/volume">@drawable/volume_l</item>
         <item name="attr/charge">@drawable/charge_l</item>
         <item name="attr/misc">@drawable/misc_l</item>
         <item name="attr/performance">@drawable/performance_l</item>
         <item name="attr/app">@drawable/app_l</item>
    </style>
 
    <style name="SplashScreen">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
    </style>

</resources>